<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sliderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/listView_grouplist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_border_corner_slid"
                android:gravity="center"
                android:text="Play"
                android:textAllCaps="false"
                android:textColor="@color/pink_500"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btnAddpl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_border_slid"
                android:gravity="center"
                android:text="Add to Playlist"
                android:textAllCaps="false"
                android:textColor="@color/subtitle"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/btnDl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_border_corner_slid_bot"
                android:gravity="center"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@color/teal_A700"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_border_corner_slid_bot"
                android:gravity="center"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/purple_600"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_border_corner_slid_both"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/subtitle"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>